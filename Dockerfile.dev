FROM node:20-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache libc6-compat

# First, install packages/ui dependencies (needed by landing)
WORKDIR /app/packages/ui
COPY packages/ui/package.json packages/ui/package-lock.json* ./
RUN npm install

# Copy packages/ui source (needed for build)
COPY packages/ui ./

# Build the UI package (needed for Vite to resolve imports)
RUN npm run build

# Now install landing dependencies (which references @lvos/ui via file:)
WORKDIR /app/apps/landing
COPY apps/landing/package.json apps/landing/package-lock.json* ./
RUN npm install

# Copy landing source code
COPY apps/landing ./

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]



